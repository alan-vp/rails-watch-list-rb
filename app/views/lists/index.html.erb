<div class="banner">
  <div class="container">
    <h1>Our categories</h1>
    <%= link_to "New movie list", new_list_path, class: "btn btn-light" %>
  </div>
</div>

<div class="container text-center">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <div class="list-image d-flex align-items-center justify-content-center"
             style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>') center/cover no-repeat"
        >
          <%= link_to list.name, list_path(list), class: "link-decor h2"  %>
        </div>
      </div>
    <% end %>
  </div>
</div>




<%= link_to "Home", root_path %>
