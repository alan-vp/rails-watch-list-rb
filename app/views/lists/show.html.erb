<%= link_to "Back", lists_path %>
<%= @list.name %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list)  %>
<%= cl_image_tag @list.photo.key, heigth: 200, width: 300, crop: :fill %>

<% @bookmarks.each do |bookmark| %>
  <p>Title: <%= bookmark.movie.title %></p>
  <p>Comment: <%= bookmark.comment %></p>
  <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<% end %>
