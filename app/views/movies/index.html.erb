<div class="container">
  <div class="d-flex justify-content-evenly">
    <%= link_to "Create a new list", new_list_path, class: "link-decor" %>
    <%= link_to "See all the lists", lists_path, class: "link-decor"%>
  </div>
  <h1 class="text-center">Our movies</h1>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-lg-4">
        <div class="card mb-5">
          <div class="card-img">
            <img src="<%= movie.poster_url %>" class="card-img-top" alt="movie poster">
          </div>
          <div class="card-body">
            <h5 class="card-title my-3"><%= movie.title %> <i class="fa-solid fa-star"></i> <%= movie.rating %></h5>
            <p class="card-text my-3"> <%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
