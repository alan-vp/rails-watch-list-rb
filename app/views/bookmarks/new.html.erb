<div class="container mt-4">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <div class="mb-3">
      <%= f.input :comment, label_html: {class: 'form-label'}, input_html: {class: 'form-control'} %>
    </div>
    <div class="mb-3">
      <%= f.association :movie, label_html: {class: 'form-label'}, input_html: {class: 'form-control'} %>
    </div>
    <%= f.submit class: 'btn btn-primary mb-5' %>
  <% end %>
  <%= link_to "Back", list_path(@list), class: "text-decoration-none btn-back" %>
</div>
